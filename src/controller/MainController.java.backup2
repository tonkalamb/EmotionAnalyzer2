    private String hexToRgba(String hex, double alpha) {
        try {
            Color color = Color.web(hex);
            return String.format("rgba(%d, %d, %d, %.2f)",
                (int)(color.getRed() * 255),
                (int)(color.getGreen() * 255),
                (int)(color.getBlue() * 255),
                alpha);
        } catch (Exception e) {
            return "rgba(128, 128, 128, " + alpha + ")";
        }
    }
